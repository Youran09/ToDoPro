import SwiftUI

struct SimpleTestView: View {
    @State private var testText = ""
    @State private var tasks: [String] = []

    var body: some View {
        NavigationView {
            VStack(spacing: 20) {
                Text("简单测试版本")
                    .font(.largeTitle)
                    .padding()

                // Simple text input test
                VStack(alignment: .leading, spacing: 8) {
                    Text("测试文本输入：")
                        .font(.headline)

                    TextField("请输入中文测试", text: $testText)
                        .padding()
                        .border(Color.gray, width: 1)

                    Text("当前文本: '\(testText)'")
                        .font(.caption)
                        .foregroundColor(.blue)
                }
                .padding()

                // Add button
                Button("添加到任务列表") {
                    if !testText.isEmpty {
                        tasks.append(testText)
                        testText = ""
                    }
                }
                .padding()
                .background(.blue)
                .foregroundColor(.white)
                .cornerRadius(8)

                // Task list
                if !tasks.isEmpty {
                    VStack(alignment: .leading, spacing: 8) {
                        Text("任务列表：")
                            .font(.headline)

                        ForEach(Array(tasks.enumerated()), id: \.offset) { index, task in
                            HStack {
                                Text("\(index + 1). \(task)")
                                Spacer()
                                Button("删除") {
                                    tasks.remove(at: index)
                                }
                                .foregroundColor(.red)
                            }
                            .padding(.horizontal)
                        }
                    }
                    .padding()
                }

                Spacer()
            }
            .navigationTitle("文本输入测试")
        }
    }
}

